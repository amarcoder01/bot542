modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "cargo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "lcms2", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "postgresql", "qhull", "rustc", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TradeAI Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Advanced TradeAI"

[[workflows.workflow]]
name = "TradeAI Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python simple_telegram_bot.py"
waitForPort = 8080

[[workflows.workflow]]
name = "Advanced TradeAI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd deploy && python advanced_bot.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 80
