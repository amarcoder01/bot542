# TradeAI Telegram Bot Environment Variables
# Copy this file to .env and fill in your API keys

# Required: Telegram Bot Token (get from @BotFather)
TELEGRAM_API_TOKEN=your_telegram_bot_token_here

# Required: OpenAI API Key (for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Database Configuration
DATABASE_URL=postgresql://user:password@localhost/tradeai

# Optional: Trading APIs
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Optional: Chart Services
CHART_IMG_API_KEY=your_chart_api_key_here

# Server Configuration
PORT=8080
DEBUG=false